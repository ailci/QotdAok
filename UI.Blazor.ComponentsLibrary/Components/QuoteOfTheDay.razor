@if (QotdVm is null)
{
    <div>Quote of the Day wird geladen...</div>
}
else
{
    <div class="container">
        <div class="text-center">
            <div class="p-2 rounded-3">
                <h5 class="display-6 py-3">
                    @Title
                </h5>
                <p class="text-center">
                    
                    <!-- 1. Version -->
                    @*  @if (!string.IsNullOrWhiteSpace(QotdVm.AuthorPhotoMimeType) && QotdVm.AuthorPhoto is not null)
                    {
                        <!-- src="data:MIMETYPE;base64,NUTZDATEN" -->
                        <img width="150" src="data:@QotdVm.AuthorPhotoMimeType;base64,@Convert.ToBase64String(QotdVm.AuthorPhoto)" alt="@QotdVm.AuthorName"/>
                    }
                    else
                    {
                        <img width="150" src="img/noimg.jpg" alt="Kein Bild"/>
                    } *@
                    
                    <!-- 2. Version als Component -->
                    <DataImageUri ImageMimeType="@QotdVm.AuthorPhotoMimeType"
                                  Image="@QotdVm.AuthorPhoto"
                                  alt="@QotdVm.AuthorName" width="150">
                    </DataImageUri>
                </p>
                <blockquote class="text-center">
                    <p class="lead fw-bold">@QotdVm.QuoteText</p>
                    <cite>
                        <span>@QotdVm.AuthorName - @QotdVm.AuthorDescription</span>
                        <br/>
                        <span>
                            @(QotdVm.AuthorBirthDate is not null ? QotdVm.AuthorBirthDate.Value.ToShortDateString() : "k.A.")
                        </span>
                    </cite>
                </blockquote>
            </div>
        </div>
        <div class="overflow-hidden">
            @LogOfQotd
        </div>
    </div>
}


@code {

    [Parameter, EditorRequired]
    public string? Title { get; set; }

    [Parameter]
    public QuoteOfTheDayViewModel? QotdVm { get; set; }

    [Parameter]
    public RenderFragment? LogOfQotd { get; set; }
}
